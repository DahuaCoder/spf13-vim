" Tagbar
nmap <F8> :TagbarOpen f<CR>

" Define new commands
command RestDoc execute "!tmux new -d updateRestDoc.sh"

" Key mapping
map <F9> :RestDoc<CR>
map <F2> :UndotreeToggle<CR>

" gvim
set guifont=Droid\ Sans\ Mono\ 10

" peronal setting
:set textwidth=99

" flake8 setting
let g:flake8_max_line_length=&textwidth

" PyMode
let g:pymode_lint_options_pep8 =
    \ {'max_line_length': &textwidth}

" syntastic setting
let g:syntastic_python_checker_args="--max-line-length=99"
